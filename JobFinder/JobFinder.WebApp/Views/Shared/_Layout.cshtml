@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - JobFinder</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
@{
    var jwt = Context.Session.GetString("JWT");
    var role = Context.Session.GetString("Role");
}

<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom mb-3">
        <div class="container-fluid">

            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                JobFinder
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            Home
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="JobOffer" asp-action="Index">
                            Job Offers
                        </a>
                    </li>

                </ul>

                <ul class="navbar-nav ms-auto">

                    @* NOT LOGGED IN *@
                    @if (string.IsNullOrEmpty(jwt))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                Login
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">
                                Register
                            </a>
                        </li>
                    }
                    else
                    {
                        @* EMPLOYEE *@
                        @if (role == "Employee")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Application" asp-action="MyApplications">
                                    My Applications
                                </a>
                            </li>
                        }

                        @* EMPLOYER *@
                        @if (role == "Employer")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Firm" asp-action="Index">
                                    My Firms
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="JobOffer" asp-action="Create">
                                    Create Job
                                </a>
                            </li>
                        }

                        @* ADMIN (ako imaš) *@
                        @if (role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                    Admin Panel
                                </a>
                            </li>
                        }

                        @* LOGOUT *@
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">
                                Logout
                            </a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - JobFinder
    </div>
</footer>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
