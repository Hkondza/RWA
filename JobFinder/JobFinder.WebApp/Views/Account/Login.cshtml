@model JobFinder.WebApp.ViewModels.Auth.LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="auth-wrapper">
    <div class="auth-card">
        <h2>Login</h2>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" type="email" />
                <span asp-validation-for="Email" class="error"></span>
            </div>

            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password" class="error"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
            {
                <p class="error">@Model.ErrorMessage</p>
            }

            <button type="submit" class="btn full">Login</button>
        </form>

        <p class="switch">
            Nemate račun?
            <a asp-action="Register">Registrirajte se</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
